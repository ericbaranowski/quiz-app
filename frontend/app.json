{
    "name": "Quiz Player App",
    "description": "Multiplayer quiz app built on Salesforce technology (player app)",
    "repository": "https://github.com/pozil/quiz-player-app",
    "logo": "https://github.com/pozil/quiz-player-app/raw/master/src/client/resources/logo.png",
    "keywords": ["lightning", "salesforce", "web-components", "open source"],
    "env": {
        "SF_LOGIN_URL": {
            "description": "Salesforce authentication domain",
            "value": "https://test.salesforce.com/",
            "required": true
        },
        "SF_USERNAME": {
            "description": "Salesforce username",
            "value": "",
            "required": true
        },
        "SF_PASSWORD": {
            "description": "Salesforce password",
            "value": "",
            "required": true
        },
        "SF_TOKEN": {
            "description": "Salesforce security token",
            "value": "",
            "required": true
        },
        "SF_NAMESPACE": {
            "description": "Salesforce package namespace (default: sfqz)",
            "value": "sfqz"
        },
        "QUIZ_API_KEY": {
            "description": "Quiz API key",
            "value": "",
            "required": true
        },
        "COLLECT_PLAYER_EMAILS": {
            "description": "Whether app should collect player emails (true/false)",
            "value": "false"
        }
    },
    "success_url": "/"
}
